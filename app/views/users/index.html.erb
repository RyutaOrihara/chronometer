<h1>ユーザー 一覧</h1>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <%= search_form_for @q, url: :users do |f| %>
          <%= f.label :username %>
          <%= f.text_field :username_cont, placeholder: '名前' %>
          <br>
          <%= f.submit 'SEARCH' %>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-md-6 event-panel-primary">
        <% @users.each do |user| %>
          <% if user.id != current_user.id %>
            <div class="user_icon">
              <%= link_to user.username, user %>
              <% if user.image.url %>
                <strong>:</strong>
                <%= image_tag(user.image.url,:size => "50x50") %>
              <% end %>
            </div>  
            <div class="follow_botton">
              <%= render 'follow_form', user: user %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="row pagenate">
      <%= paginate(@users) %>
    </div>
  </div>
