<%= form_with(model: @event,local: true, url: choose_new_or_edit) do |form| %>
  <% if @event.errors.any? %>
    <div class="error_explanation alert alert-error alert alert-danger" role="alert">
      <h2><%= @event.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="envent_title">
    <%= form.label :イベント名 %>
    <%= form.text_field :title %>
  </div>

  <div class="event_title">
    <%= form.label :開始日時 %>
    <%= form.datetime_field :time %>
  </div>

  <div class="event_title">
    <%= form.label :終了日時 %>
    <%= form.datetime_field :endtime %>
  </div>

   <div class="event_title">
      <%= form.label :会場名 %>
      <%= form.text_field :place %>
   </div>

   <div class="event_title">
     <%= form.label :定員 %>
     <%= form.number_field :capacity %>
   </div>

    <div class="content-form">
      <%= form.label :詳細内容 %>
      <%= form.text_area :content %>
    </div>

    <div class="image_title">
      <%= form.label :画像 %>
      <%= image_tag(@event.image.url,:size => "100x100") if @event.image.url %>
      <%= form.file_field :image %>
    </div>


    <%= form.submit %>

  <% end %>

  <%= link_to "イベント一覧",events_path %>
