<h3>"以下の内容で、送信する"</h3>
<div class="container">
  <%= form_with(model: @event,url: events_path,local: true)do |form| %>
    <div class="form-horizontal">
      <div class="row">
        <div class="col-md-4">
          <div class="row_A">
            <div class="panel panel-default">
              <div class="panel-heading">
                入力内容
              </div>
              <div class="event_title col-md-12">
                <%= form.label :タイトル,class:"control-label" %>
                <p><%= @event.title %></p>
                <%= form.hidden_field :title %>
              </div>
              <div class="start_time col-md-12">
                <%= form.label :開始日時,class:"control-label" %>
                <p><%= @event.time %></p>
                <%= form.hidden_field :time %>
              </div>
              <div class="end_time col-md-12">
                <%= form.label :終了日時,class:"control-label" %>
                <p><%= @event.endtime %></p>
                <%= form.hidden_field :endtime %>
              </div>
              <div class="event_place col-md-12">
                <%= form.label :会場名, class:"control-label" %>
                <p><%= @event.place %></p>
                <%= form.hidden_field :place %>
              </div>
              <div class="event_capacity col-md-12">
                <%= form.label :定員, class:"control-label" %>
                <p><%= @event.capacity %></p>
                <%= form.hidden_field :capacity %>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-8">
          <div class="row_B">
            <div class="panel panel-default">
              <div class="panel-heading">
                <%= form.label :画像 %>
              </div>
              <%= image_tag(@event.image.url,:size => "500x480") if @event.image.url %>
              <%= form.hidden_field :image_cache %>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="event_content col-md-12">
          <%= form.label :詳細内容 %>
          <%= form.hidden_field :content %>
          <%= form.text_area :content,class:"form-control", id:"InputTextarea" %>
        </div>
      </div>
    </div>
    <br>
    <div class="submit_btn">
      <%= form.submit class: 'btn btn-info'%>
    </div>
    <br>
<% end %>

<%= form_with(model: @event, url: new_event_path, local: true, method: 'get') do |form| %>
  <%= form.hidden_field :title %>
  <%= form.hidden_field :time %>
  <%= form.hidden_field :endtime %>
  <%= form.hidden_field :place %>
  <%= form.hidden_field :capacity %>
  <%= form.hidden_field :content %>
  <%= form.hidden_field :image_cache %>
  <%= form.submit '戻る', name: 'back' %>
<% end %>
</div>
<br>
